<h1>Register</h1>

<%= form_for :user, url: '/users' do |form| %>
    <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <strong>The following <%= pluralize(@user.errors.count, "error") %> prevented your registration:</strong>
      <ul>
        <% @user.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  First Name: <%= form.text_field :first_name %>
  Last Name: <%= form.text_field :last_name %>
  Email: <%= form.text_field :email %>
  Password: <%= form.password_field :password %>
  Password Confirmation: <%= form.password_field :password_confirmation %>
  <%= form.submit 'Sign Up!', class: 'btn btn-primary'%>

<% end %>
